<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.holly.mapper.KnowledgeBaseMapper">

    <sql id="baseSql">
        select id, file_name, redis_ids, url, created_time
        from knowledge_base
    </sql>
    <delete id="deleteByIds">
        delete
        from knowledge_base
        where id in
        <foreach collection="ids" item="id" separator="," open="(" close=")">
            #{id}
        </foreach>
    </delete>

    <select id="pageQuery" resultType="com.holly.entity.KnowledgeBase">
        <include refid="baseSql"/>
        <where>
            <if test="fileName != null || fileName != ''">
                and file_name like concat('%',#{fileName},'%')
            </if>
        </where>
    </select>

    <select id="selectByIdList" resultType="com.holly.entity.KnowledgeBase">
        <include refid="baseSql"/>
        where id in
        <foreach item="id" collection="ids" separator="," open="(" close=")">
            #{id}
        </foreach>
    </select>
</mapper>